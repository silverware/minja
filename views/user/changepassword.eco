<div class="container">
<div class="container-small">
  <h1><%= @i18n.changePassword %></h1>
  <%= @formFor @password, (form) => %>
    <%= form.password @i18n.currentPassword, "oldpassword" %>
    <%= form.password @i18n.newPassword, "newpassword1" %>
    <%= form.password @i18n.newPasswordRepeat, "newpassword2" %>
    <%= form.button @i18n.changePassword %>
  <% end %>
</div>
</div>
